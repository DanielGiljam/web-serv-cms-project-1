RewriteEngine On

# TODO: actually write the .htaccess - these lines are just for demonstrational purposes
RewriteRule ^forgot-password$ index.php?page=forgot-password
RewriteRule ^register$ index.php?page=register
RewriteRule ^logout$ index.php?terminate-session=true
RewriteRule ^login$ index.php?login-request=true
RewriteRule ^person/?$ index.php?page=person
RewriteRule ^person/([a-z-]+)$ index.php?page=person&name=$1